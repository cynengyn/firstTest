function addNewPost() {
	
	/* add post title */
 	var newPostTitleDiv = document.createElement("div");
 	newPostTitleDiv.setAttribute('class', 'post_title');
 	newPostTitleDiv.style.background = "white";
 	newPostTitleDiv.innerHTML = $('#textTitle').val() + "<br>";
 	document.getElementById("postDiv").appendChild(newPostTitleDiv);
 	
 	/* add post body */
 	var newPostBodyDiv = document.createElement("div");
 	//var newPostBodyP = document.createElement("p");
 	//newPostBodyDiv.setAttribute('class', 'post_body');
 	newPostBodyDiv.style.background = "white";
 	newPostBodyDiv.innerHTML = "<br>" + $('#textAreaPost').val() + "<br>";
 	//newPostBodyDiv.appendChild(newPostBodyP);
 	document.getElementById("postDiv").appendChild(newPostBodyDiv);
 	
 	/* add post tags */
 	var newPostTagsDiv = document.createElement("div");
 	//var newPostTagA = document.createElement("a");
 	newPostTagsDiv.setAttribute('class', 'post_tags');
 	newPostTagsDiv.style.background = "white";
 	//newPostTagA.setAttribute('class', 'post_tag');
 	newPostTagsDiv.innerHTML = "<br>#" + $('#textTag').val();
 	//newPostTagsDiv.appendChild(newPostTagA);
 	document.getElementById("postDiv").appendChild(newPostTagsDiv);
 	
 	/* clear textModal content */
 	document.getElementById("textForm").reset();
}